@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public DateOnly StartDate { get; set; }
    [Parameter] public DateOnly EndDate { get; set; }
}

<a class="row padding surface-container wave scroll">
    <div class="row max">
        <div class="button circle">@Id</div>
    </div>
    <div>
        <h6 class="button small">@StartDate.ToString() &rarr; @EndDate.ToString()</h6>
    </div>
</a>
<div class="divider right-align"></div>